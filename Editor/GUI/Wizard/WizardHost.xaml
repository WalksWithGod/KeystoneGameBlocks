<Window x:Class="MBG.SimpleWizard.WizardHost"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WizardHostWindow" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <DockPanel Name="dockPanel" Grid.Row="0" Grid.ColumnSpan="4" LastChildFill="True" />

        <Button Grid.Row="1" Name="btnFirst" Margin="5,5,5,5" Click="btnFirst_Click">First</Button>
        <Button Grid.Row="1" Grid.Column="1" Name="btnPrevious" Margin="5,5,5,5" Click="btnPrevious_Click">Previous</Button>
        <Button Grid.Row="1" Grid.Column="2" Name="btnNext" Margin="5,5,5,5" Click="btnNext_Click">Next</Button>
        <Button Grid.Row="1" Grid.Column="3" Name="btnLast" Margin="5,5,5,5" Click="btnLast_Click">Last</Button>
    </Grid>
</Window>
